extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video")
        input(type="file" id="video" name="video" required accept="video/*")
        input(name="title" placeholder="Title", required type="text")
        input(name="description" placeholder="Description" required type="text")
        input(name="hashtags" placeholder="Hash Tags (Please split by comma)", required type="text")
        input(value="submit" type="submit")